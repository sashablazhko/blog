{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],
    "jsx-a11y/label-has-for": {
      "some": [ "nesting", "id" ]
    },
    "react/prop-types": [ "enabled", { 
      "ignore": "ignore", 
      "customValidators": "customValidator"
    }]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  }
}
